<div class="col-md-12">
  <h6 class="secondary-text">
    <i class="fa fa-comments-o" aria-hidden="true" style="margin-right: 10px"></i>
    <%= pluralize(comments.size, 'comment') %>
  </h6>
  <p>You are only commented after finished exam</p>

  <hr/>
  <% comments.each do |comment| %>
    <div class="media">
        <a class="media-left waves-light">
          <% if comment.user.avatar.thumb.url.nil? %>
            <%= image_tag "default_uer.png", class: "rounded-circle", alt: "Default User Avatar" %>
          <% else %>
            <%= image_tag comment.user.avatar.thumb.url, class: "rounded-circle", alt: "User Avatar" %>
          <% end %>
        </a>
        <div class="media-body">
            <h4 class="media-heading"><%= comment.user.name %></h4>
            <ul class="rating inline-ul">
                <li><i class="fa fa-star amber-text"></i></li>
                <li><i class="fa fa-star amber-text"></i></li>
                <li><i class="fa fa-star amber-text"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
            </ul>
            <p>
              <%= comment.content %>
            </p>
        </div>
    </div>
  <% end %>
</div>
