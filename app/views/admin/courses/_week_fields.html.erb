<div class="row">
  <div class="col m10 offset-m1 answer_fields" >
    <div class="choise_question">
      <%= f.text_field :content, class: "form-control choise_answers" %>
      <%= f.text_area :description, class: "md-textarea", placeholder: "Add Description" %>
      <%= f.hidden_field :_destroy %>
      <%= f.label :_destroy, class: "btn btn-danger remove_fields red lighten" do %>
        <i class="fa fa-times" aria-hidden="true"></i>
        <%= t "page.admin.action.remove" %>
      <% end %>
    </div>
  </div>
</div>
