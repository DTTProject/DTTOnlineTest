<div class="row" id="contactSection">
  <hr class="horizontal" />
  <div class="col-md-12">
    <p class="flex-center courses-title">Contact</p>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="card-block">
      <!--Header-->
      <div class="text-xs-center">
        <h3><i class="fa fa-envelope"></i> Write to us:</h3>
        <hr class="mt-2 mb-2">
      </div>

      <!--Body-->
      <p>Feel free to drop us a feeback</p>
      <br>

    <%= form_for [:admin, Feedback.new] do |f| %>
      <!--Body-->
      <div class="md-form">
        <i class="fa fa-user prefix"></i>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :name, 'Your name' %><br>
      </div>

      <div class="md-form">
        <i class="fa fa-envelope prefix"></i>
        <%= f.text_field :email, class: "form-control" %>
        <%= f.label :email, 'Your email' %><br>
      </div>

      <div class="md-form">
        <i class="fa fa-pencil prefix"></i>
        <%= f.text_field :content, class: "form-control" %>
        <%= f.label :content %><br>
      </div>

      <div class="text-xs-center">
        <%= f.submit t("feedback.send_feedback"), :class => 'btn btn-default' %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-1">
    <div class="card-block">
      <div class="text-xs-center">
        <h3> Our Information</h3>
        <hr class="mt-2 mb-2">
      </div>
